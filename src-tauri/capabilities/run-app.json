{
  "identifier": "run-app",
  "description": "permissions to run the app",
  "local": true,
  "windows": ["main", "main-*"],
  "permissions": [
    "proxy:default",
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:allow-mkdir",
    "fs:allow-exists",
    {
      "identifier": "fs:scope",
      "allow": ["$RESOURCE/ca/*", "$CONFIG/*/**"]
    },
    "shell:allow-open",
    "clipboard-manager:allow-write-text",
    "clipboard-manager:default",
    "shell:default",
    "fs:default"
  ]
}
